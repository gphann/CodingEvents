@*you can write @using CodingEvents.Models & @model List<Event> or all in one line like below*@

@model List<CodingEvents.Models.Event>
<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table table-dark">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Contact Email
            </th>
            <th>
                Location
            </th>
            <th>
                Number of Attendees
            </th>
        </tr>
            @foreach (var evt in Model)
            {
                <tr>
                    <td>@evt.Id</td>
                    <td>@evt.Name</td>
                    <td>@evt.Description</td>
                    <td>@evt.ContactEmail</td>
                    <td>@evt.Location</td>
                    <td>@evt.NumberOfAttendees</td>
                </tr>
            }
    </table>
}

