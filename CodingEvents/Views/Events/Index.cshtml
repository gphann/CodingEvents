<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Event</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (string name in ViewBag.events.Keys)
            {
                <td>@name</td>
            }
            @foreach (string description in ViewBag.events.Values)
            {
                <td>@description</td>
            }

        </tr>
    </tbody>
        
    </table>

